import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;
import java.io.IOException;
import java.util.HashSet;
import java.util.Set;

public class DartAlleyCrawler {
    private static final int MAX_DEPTH = 1; // Keep it shallow for testing
    private Set<String> visitedLinks = new HashSet<>();

    public void crawl(String url, int depth) {
        if ((!visitedLinks.contains(url) && (depth < MAX_DEPTH))) {
            try {
                visitedLinks.add(url);
                Document document = Jsoup.connect(url).get();
                String title = document.title().replace("\"", "'"); // Clean quotes for JSON
                String desc = document.select("meta[name=description]").attr("content").replace("\"", "'");
                
                if(desc.isEmpty()) desc = "No description available for this neural pathway.";

                // PRINT THIS AS A JSON OBJECT
                System.out.println("  {");
                System.out.println("    \"title\": \"" + title + "\",");
                System.out.println("    \"url\": \"" + url + "\",");
                System.out.println("    \"desc\": \"" + desc + "\"");
                System.out.println("  },");

                Elements linksOnPage = document.select("a[href]");
                depth++;
                for (Element page : linksOnPage) {
                    crawl(page.attr("abs:href"), depth);
                }
            } catch (IOException e) {
                // Ignore errors to keep JSON clean
            }
        }
    }

    public static void main(String[] args) {
        System.out.println("["); // Start JSON array
        // CRAWL TARGET: Change this to crawl what you want (e.g., a news site or wiki)
        new DartAlleyCrawler().crawl("https://en.wikipedia.org/wiki/Artificial_intelligence", 0);
        System.out.println("]"); // End JSON array
    }
}
